{
  "extends": "@salesforce/dev-config/tsconfig",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "paths": {
      // prevent type conflicts between plugin's kit and core's kit during yarn:link local dev
      "@salesforce/kit": ["./node_modules/@salesforce/kit"]
    }
  },
  "include": ["./src/**/*.ts"]
}
